{
  "name": "sap-mmpur-mcp",
  "version": "1.0.0",
  "description": "SAP MCP Server for Purchase Order Modifications using ODATA API",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "node test.js",
    "build": "mkdir -p dist && cp -R src config index.js package.json manifest.yml test.js dist/",
    "deploy": "npm run build && cf push",
    "lint": "eslint .",
    "format": "prettier --write .",
    "ollama:check": "node -e \"require('./src/util/ollamaIntegration').isAvailable().then(console.log)\"",
    "cursor:sync": "node -e \"console.log('Syncing Cursor IDE configuration...')\"",
    "prepare": "npm run lint && npm test",
    "git:setup": "scripts/setup-git.sh",
    "docker:build": "docker build -t sap-mmpur-mcp .",
    "docker:run": "docker run -p 3000:3000 --env-file ./config/.env sap-mmpur-mcp"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "cursor": {
    "configVersion": "1.0.0",
    "useTypeScript": false,
    "enableAIAssistance": true
  },
  "ollama": {
    "models": ["llama3"],
    "defaultModel": "llama3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/sap-mmpur-mcp.git"
  },
  "keywords": [
    "sap",
    "odata",
    "api",
    "purchase-order",
    "mcp",
    "cloud"
  ],
  "author": "SAP-MMPUR-MCP Contributors",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/sap-mmpur-mcp/issues"
  },
  "homepage": "https://github.com/yourusername/sap-mmpur-mcp#readme"
} 